{
    "parser": "@babel/eslint-parser",
    "env": {
        "node": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:mocha/recommended",
        "plugin:security/recommended",
        "plugin:prettier/recommended"
    ],
    "parserOptions": {
        "sourceType": "module"
    },
    "plugins": [
        "simple-import-sort",
        "mocha",
        "security",
        "prettier"
    ],
    "rules": {
        "no-console": "error",
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "simple-import-sort/imports": [
            "error",
            {
                "groups": []
            }
        ],
        "object-curly-spacing": [
            "error",
            "always"
        ],
        "comma-spacing": [
            "error"
        ],
        "eol-last": [
            "error",
            "always"
        ],
        "jest/expect-expect": "off",
        "no-unused-vars": [
            "error", 
            {
                "argsIgnorePattern": "^_"
            }
        ]
    }
}
