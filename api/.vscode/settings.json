{
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true
    },
    "eslint.validate": ["javascript"],
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/*/**": true
    },
    "files.exclude": {
        "**/node_modules": true,
        "**/dist": true,
        "**/npm-debug.log": true,
        "**/.env": true,
        "**/.DS_Store": true,
        "**/.idea/": true,
        "**/.idea_modules/": true
    },
    "cmake.configureOnOpen": false
}